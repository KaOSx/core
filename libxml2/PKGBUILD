
pkgname=libxml2
pkgver=2.9.14
_pkgver=2.9
pkgrel=1
pkgdesc="XML parsing library, version 2"
arch=('x86_64')
url="http://www.xmlsoft.org/"
license=('MIT')
depends=('zlib' 'readline' 'ncurses' 'xz')
makedepends=('python3')
options=('!libtool')
source=("https://download.gnome.org/sources/${pkgname}/${_pkgver}/${pkgname}-${pkgver}.tar.xz"
        "http://www.w3.org/XML/Test/xmlts20080827.tar.gz")
sha256sums=('60d74a257d1ccec0475e749cba2f21559e48139efba6ff28224357c7c798dfee'
            '96151685cec997e1f9f3387e3626d61e6284d4d6e66e0e440c209286c03e9cc7')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
     --with-threads \
     --with-history \
     --with-python=/usr/bin/python3
  make
}

check() {
  cd ${pkgname}-${pkgver}

  mv ${srcdir}/xmlconf .
  make check
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
