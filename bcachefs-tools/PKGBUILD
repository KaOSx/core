
pkgname=bcachefs-tools
pkgver=1.9.3
pkgrel=1
pkgdesc='Userspace tools and docs for bcachefs'
arch=('x86_64')
url='https://bcachefs.org/'
license=('GPL-2.0-only')
depends=('keyutils' 'libaio' 'libsodium' 'liburcu' 'lz4' 'zlib' 'zstd')
makedepends=('clang' 'llvm' 'rust' 'valgrind')
source=("https://evilpiepirate.org/bcachefs-tools/${pkgname}-${pkgver}.tar.zst")
sha256sums=('5fe089e2cba37e5351b5d18a8994cbb5005a25f4ec80a0476efcf5ec038a9af7')

build() {
  cd ${pkgname}-${pkgver}

  make \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir}
}

package() {
  cd ${pkgname}-${pkgver}

  make \
    PREFIX=/usr \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir} \
    install
}
