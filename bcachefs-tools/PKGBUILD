
pkgname=bcachefs-tools
pkgver=1.9.0
pkgrel=1
pkgdesc='Userspace tools and docs for bcachefs'
arch=('x86_64')
url='https://bcachefs.org/'
license=('GPL-2.0-only')
depends=('keyutils' 'libaio' 'libsodium' 'liburcu' 'lz4' 'zlib' 'zstd')
makedepends=('clang' 'llvm' 'rust' 'valgrind')
source=("https://evilpiepirate.org/bcachefs-tools/${pkgname}-${pkgver}.tar.zst")
sha256sums=('d0c3fe144ce06a75b37cddc176f1cd8d4f8089b1ad3217ca73c8029610187072')

build() {
  cd ${pkgname}-${pkgver}

  make \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir}
}

package() {
  cd ${pkgname}-${pkgver}

  make \
    PREFIX=/usr \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir} \
    install
}
