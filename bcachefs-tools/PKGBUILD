
pkgname=bcachefs-tools
pkgver=1.7.0
pkgrel=1
pkgdesc='Userspace tools and docs for bcachefs'
arch=('x86_64')
url='https://bcachefs.org/'
license=('GPL-2.0-only')
depends=('keyutils' 'libaio' 'libsodium' 'liburcu' 'lz4' 'zlib' 'zstd')
makedepends=('clang' 'llvm' 'rust' 'valgrind')
source=("https://evilpiepirate.org/bcachefs-tools/${pkgname}-${pkgver}.tar.zst")
sha256sums=('90b9c18193112bc9e668e28dec2c6439209321805a7360f015d26ed7e97ec49e')

build() {
  cd ${pkgname}-${pkgver}

  make \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir}
}

package() {
  cd ${pkgname}-${pkgver}

  make \
    PREFIX=/usr \
    LIBEXECDIR=/usr/lib \
    DESTDIR=${pkgdir} \
    install
}
