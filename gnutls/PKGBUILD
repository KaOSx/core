
pkgname=gnutls
pkgver=3.5.18
_pkgver=3.5.18
pkgrel=2
pkgdesc="Secure communications library implementing the SSL, TLS and DTLS protocols and technologies around them"
arch=('x86_64')
license=('GPL3' 'LGPL')
url="https://www.gnutls.org/"
options=('libtool')
depends=('gcc-libs' 'libtasn1' 'readline' 'zlib' 'texinfo' 'nettle' 'p11-kit' 'libidn')
makepends=('datefudge' 'valgrind' 'strace')
source=("https://www.gnupg.org/ftp/gcrypt/gnutls/v3.5/${pkgname}-${pkgver}.tar.xz")
md5sums=('c2d93d305ecbc55939bc2a8ed4a76a3d')

build() {
  cd ${pkgname}-${_pkgver}
  
  ./configure --prefix=/usr \
       --with-zlib \
       --disable-guile \
       --disable-static
  make 
}

check() {
  cd ${pkgname}-${_pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${_pkgver}
  
  make DESTDIR=${pkgdir} install 
}

