
pkgbase=linux
pkgname=('linux' 'linux-headers' 'linux-docs') 
_kernelname=${pkgname#linux}
_basekernel=4.14
pkgver=4.14.14
_pkgver=4.13.12.a
pkgrel=1
arch=('x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc'  'intel-ucode')
options=('!strip')
source=("http://www.kernel.org/pub/linux/kernel/v4.x/linux-4.14.tar.xz"
        "http://www.kernel.org/pub/linux/kernel/v4.x/patch-${pkgver}.xz"
        #"https://github.com/copperhead/linux-hardened/releases/download/${_pkgver}/linux-hardened-${_pkgver}.patch"
        # the main kernel config files
        'config'
        #aufs patches
        'aufs4-loopback.patch'
        'aufs4-base.patch'
        'aufs4-mmap.patch'
        'aufs4-standalone.patch'
        'aufs4-kbuild.patch'
        'aufs4.patch'
        'config.aufs'
        'tmpfs-idr.patch'
        'vfs-ino.patch'
        # standard config files for mkinitcpio ramdisk
        'linux.preset'
        '99-linux.hook')
md5sums=('bacdb9ffdcd922aa069a5e1520160e24'
         'b688cbee616f4b35ab08b953519eda55'
         'fca7fc08773eb52edbaca886b4d0f307'
         '8c780cf57abcd5966f01f3b81d8c5d0c'
         'c77c67caa666b160010b7e54f541fc2f'
         'adf636e5829a740c2e50dcba91727d86'
         'd5bdf8d16faeacc08f88e30663ace4df'
         '060353ea98b4f8b4557c3d081f1a3ce9'
         'cd3941afa4f3fce5a768a4e65f9af6c3'
         '58077c1703977e6b5fafdda552f542d5'
         '37aa39db40d21f4fd5f9dce923887306'
         'ee43a630b3b82f649a54b3a81fb7b15b'
