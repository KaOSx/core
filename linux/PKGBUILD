        'aufs3-standalone.patch'
        'aufs3-kbuild.patch'
        'aufs3.patch'
        'config.aufs'
        # standard config files for mkinitcpio ramdisk
        'linux.preset'
        'change-default-console-loglevel.patch'
        'fat-3.6.x.patch'
        'sp5100_tco-Add-SB8x0-chipset-support2.patch'
        'ath3k.patch'
        'security.patch')
