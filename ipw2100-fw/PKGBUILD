
pkgname=ipw2100-fw
pkgver=1.3
pkgrel=13
pkgdesc="Intel Centrino Drivers firmware for IPW2100"
arch=('x86_64')
url="http://ipw2100.sourceforge.net/"
license=('custom')
source=("https://mirrors.slackware.com/slackware/slackware-current/source/n/ipw2100-fw/${pkgname}-${pkgver}.tar.bz2")
md5sums=('12ef9d7787ffff93fcec49dd778e7706')

package() {

  for i in *.fw
  do
    install -D -m 644 $i ${pkgdir}/usr/lib/firmware/$i
  done 

  install -D -m 644 LICENSE {pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
