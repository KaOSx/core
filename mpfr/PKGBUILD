
pkgname=mpfr
_pkgver=4.2.0
_patchlevel=p9
pkgver=${_pkgver}.${_patchlevel}
#pkgver=${_pkgver}
pkgrel=1
pkgdesc="Multiple-precision floating-point library"
arch=('x86_64')
url="https://www.mpfr.org/"
license=('LGPL')
depends=('gmp')
options=('!libtool')
source=("https://www.mpfr.org/mpfr-current/mpfr-${_pkgver}.tar.xz"
        # https://www.mpfr.org/mpfr-4.2.0/allpatches  http://www.mpfr.org/mpfr-4.2.0/#bugs
        'allpatches.diff')
        #"mpfr-${_pkgver}-${_patchlevel}.patch")
sha256sums=('06a378df13501248c1b2db5aa977a2c8126ae849a9d9b7be2546fb4a9c26d993'
            '06da0b2a56e365f7e74ac241926f61d2574a0754548ff8116e9ddee0dabacda0')

build() {
  cd ${pkgname}-${_pkgver}
  patch -p1 -i $srcdir/allpatches.diff

  ./configure --prefix=/usr --enable-thread-safe --enable-shared
  make
}

check() {
  cd ${pkgname}-${_pkgver}

  make check
  make check-exported-symbols
}

package() {
  cd ${pkgname}-${_pkgver}

  make DESTDIR=${pkgdir} install
}
