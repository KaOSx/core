
pkgname=bridge-utils
pkgver=1.6
pkgrel=3
pkgdesc="EEE 802.1d ethernet bridging (plus Spanning Tree protocol) for the linux kernel."
arch=('x86_64')
url="https://wiki.linuxfoundation.org/networking/bridge"
license=('GPL')
depends=('glibc' 'iptables')
source=("https://www.kernel.org/pub/linux/utils/net/bridge-utils/${pkgname}-${pkgver}.tar.xz")
sha256sums=('cc67efb5d5fb8928a6569b3fade2b4042ec17da04678dab127d96b46489e26c8')

build() {
  cd ${pkgname}-${pkgver}
  
  aclocal
  autoconf
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc
  make
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
