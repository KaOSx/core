
pkgname=gmp
pkgver=6.2.1
pkgrel=1
pkgdesc="Free library for arbitrary precision arithmetic, operating on signed integers, rational and floating-point numbers."
arch=('x86_64')
url="https://gmplib.org/"
depends=('gcc-libs' 'sh')
license=('LGPL3' 'GPL')
options=('!libtool')
source=("https://ftp.gnu.org/gnu/gmp/gmp-${pkgver}.tar.xz")
md5sums=('0b82665c4a92fd2ade7440c13fcaa42b')

build() {
  cd ${pkgname}-${pkgver}
  
  ./configure --build=${CHOST} \
    --prefix=/usr \
    --enable-cxx \
    --enable-fat
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
