
pkgname=libxslt
pkgver=1.1.40
_pkgver=1.1
pkgrel=1
pkgdesc="XML stylesheet transformation library"
arch=('x86_64')
url="http://xmlsoft.org/XSLT/"
license=('MIT')
depends=('libxml2' 'libgcrypt')
makedepends=('python3')
options=('!libtool')
source=("https://download.gnome.org/sources/libxslt/${_pkgver}/${pkgname}-${pkgver}.tar.xz"
        'xml_config.patch')
sha256sums=('194715db023035f65fb566402f2ad2b5eab4c29d541f511305c40b29b1f48d13'
            '33351d99a96035462fb2adec4dbd1c267810275f626f946c32f5fb914ffb2e98')

build() {
  cd ${pkgname}-${pkgver}
  # unbreak builds which require libxml2, examples python lxml packages
  #patch -p1 -i ${srcdir}/xml_config.patch

  ./configure --prefix=/usr
  make 
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  install -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/
}
