
pkgname=gobject-introspection
pkgver=1.64.1
_pkgver=1.64
pkgrel=1
pkgdesc="Introspection system for GObject-based libraries"
url="https://wiki.gnome.org/Projects/GObjectIntrospection"
arch=('x86_64')
license=('LGPL' 'GPL')
depends=('libffi' 'glib2' 'python3')
makedepends=('cairo' 'meson' 'ninja')
options=('!libtool')
source=("https://ftp.gnome.org/pub/gnome/sources/${pkgname}/${_pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('80beae6728c134521926affff9b2e97125749b38d38744dc901f4010ee3e7fa7')


build() {
  mkdir -p build
  cd build
  
  meson ../${pkgname}-${pkgver} \
    --prefix=/usr \
    --buildtype=release \
    -D python=python3
  ninja
}

package() {
  cd build
  
  DESTDIR=${pkgdir} ninja install
}

