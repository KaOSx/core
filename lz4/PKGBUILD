
pkgname=lz4
pkgver=129
pkgrel=1
pkgdesc='Lossless compression algorithm, providing compression speed at 400 MB/s per core, scalable with multi-cores CPU.'
arch=('x86_64')
url='https://github.com/Cyan4973/lz4'
license=('GPL2')
depends=('glibc')
source=("https://github.com/Cyan4973/lz4/archive/r$pkgver.tar.gz")
md5sums=('9158724a57181891bcfd62b27911b7c5')

build() {
  cd $pkgname-r$pkgver

  make PREFIX=/usr
}

package() {
  cd $pkgname-r$pkgver

  make install PREFIX=/usr DESTDIR="$pkgdir"
}
