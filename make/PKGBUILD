
pkgname=make
pkgver=4.2.93
pkgrel=1
pkgdesc="GNU make utility to maintain groups of programs"
arch=('x86_64')
url="https://www.gnu.org/software/make"
license=('GPL3')
groups=('base-devel')
depends=('glibc' 'sh' 'guile')
#source=("https://ftp.gnu.org/gnu/make/${pkgname}-${pkgver}.tar.bz2"
source=("https://alpha.gnu.org/gnu/make/${pkgname}-${pkgver}.tar.lz"
        'perl26.patch')
md5sums=('6b252188079b36d13e96d5527f8ca033'
         '3676f37c6561900bcb1ff9a72746732d')

build() {
  cd ${pkgname}-${pkgver}
  #sed -i -e 's|guile-2.0|guile-2.2|' configure
  #patch -p1 -i ${srcdir}/perl26.patch

  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgname}-${pkgver}
  
  make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}
