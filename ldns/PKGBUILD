 
pkgname=ldns
pkgver=1.8.0
pkgrel=1
pkgdesc='DNS library that facilitates DNS tool programming.'
url='https://www.nlnetlabs.nl/projects/ldns/'
license=('custom:BSD')
arch=('x86_64')
depends=('openssl' 'libpcap')
options=('!staticlibs')
source=("https://www.nlnetlabs.nl/downloads/ldns/${pkgname}-${pkgver}.tar.gz")
sha256sums=('82512507698031c37902e941c84deca3edad8cf791e7c3275a2d99d4e53f8cfc')

build() {
    cd ${pkgname}-${pkgver}

    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --with-drill \
        --with-examples \
        --disable-gost \
        --disable-rpath
    make
}

package() {
    cd ${pkgname}-${pkgver}
    make DESTDIR=${pkgdir} install

    install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE
}
