# NOTE: requires rebuilt with each new gcc version

pkgname=libtool
pkgver=2.4.6
pkgrel=20
pkgdesc="A generic library support script"
arch=('x86_64')
url="https://www.gnu.org/software/libtool"
license=('GPL')
options=('!libtool')
depends=('sed' 'grep' 'sh' 'tar' 'gcc=10.2.0') # Needed by libtoolize
makedepends=('help2man')
groups=('base-devel')
provides=('libltdl')
conflicts=('libltdl')
replaces=('libltdl')
source=("https://ftpmirror.gnu.org/libtool/${pkgname}-${pkgver}.tar.xz"
        'no-clean-gnulib.patch')
md5sums=('1bfb9b923f2c1339b4d2ce1807064aa5'
         '23c8ef65f19705239f1aa362f429e3ad')

build() {
  cd ${pkgbase}-${pkgver}
  # https://bugs.gentoo.org/527200  build failures with 2.4.3 in ocatve & groff
  #patch -p1 -i "${srcdir}/no-clean-gnulib.patch"
  
  ./configure --prefix=/usr
  make
}

check() {
  cd ${pkgbase}-${pkgver}
  
  #make check
}

package() {
  cd ${pkgname}-${pkgver}
  
  make DESTDIR=${pkgdir} install
}



