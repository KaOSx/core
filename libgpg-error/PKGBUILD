
pkgname=libgpg-error
pkgver=1.49
pkgrel=1
pkgdesc="Support library for libgcrypt"
arch=('x86_64')
url="https://www.gnupg.org/software/libgpg-error/index.html"
license=('LGPL')
depends=('glibc' 'sh')
options=('!libtool')
source=("https://www.gnupg.org/ftp/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('8b79d54639dbf4abc08b5406fb2f37e669a2dec091dd024fb87dd367131c63a9')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make 
}

check() {
  cd ${pkgname}-${pkgver}

  make check
}


package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install 
}

