
pkgname=libgpg-error
pkgver=1.47
pkgrel=1
pkgdesc="Support library for libgcrypt"
arch=('x86_64')
url="https://www.gnupg.org/software/libgpg-error/index.html"
license=('LGPL')
depends=('glibc' 'sh')
options=('!libtool')
source=("https://www.gnupg.org/ftp/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2")
sha256sums=('9e3c670966b96ecc746c28c2c419541e3bcb787d1a73930f5e5f5e1bcbbb9bdb')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr
  make 
}

check() {
  cd ${pkgname}-${pkgver}

  make check
}


package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install 
}

