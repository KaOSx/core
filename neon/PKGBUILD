
# KEEP LIBTOOL FILES!
pkgname=neon
pkgver=0.32.1
pkgrel=1
pkgdesc="HTTP and WebDAV client library with a C interface"
arch=('x86_64')
url="https://notroj.github.io/neon/"
license=('GPL' 'LGPL')
depends=('krb5' 'expat' 'ca-certificates')
makedepends=('xmlto')
options=('libtool')
source=("https://notroj.github.io/neon/${pkgname}-${pkgver}.tar.gz")
sha256sums=('05c54bc115030c89e463a4fb28d3a3f8215879528ba5ca70d676d3d21bf3af52')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-expat \
    --enable-shared \
    --disable-static \
    --with-ssl=openssl \
    --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt
  make 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
