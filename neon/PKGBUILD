
# KEEP LIBTOOL FILES!
pkgname=neon
pkgver=0.32.3
pkgrel=1
pkgdesc="HTTP and WebDAV client library with a C interface"
arch=('x86_64')
url="https://notroj.github.io/neon/"
license=('GPL' 'LGPL')
depends=('krb5' 'expat' 'ca-certificates')
makedepends=('xmlto')
options=('libtool')
source=("https://notroj.github.io/neon/${pkgname}-${pkgver}.tar.gz")
sha256sums=('94cb875dc6dbfcdee58f039b763c674b0232886cdfd7a5de91be5cdfa2b7596a')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --with-expat \
    --enable-shared \
    --disable-static \
    --with-ssl=openssl \
    --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt
  make 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
