
pkgname=libevent
pkgver=2.0.22
_pkgver=2.0
pkgrel=1
pkgdesc="An event notification library"
license=('GPL2')
arch=('x86_64')
url="http://libevent.org/"
depends=('openssl')
source=("http://sourceforge.net/projects/levent/files/libevent/libevent-${_pkgver}/${pkgname}-${pkgver}-stable.tar.gz")
md5sums=('c4c56f986aa985677ca1db89630a2e11')
         
build() {
  cd "${srcdir}/${pkgname}-${pkgver}-stable"
  
  ./configure --prefix=/usr --sysconfdir=/etc
  make 
}

check() {
  cd "${srcdir}/${pkgname}-${pkgver}-stable"
  
  make check
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}-stable"
  make DESTDIR="${pkgdir}" install
  
  install -Dm 644 LICENSE "${pkgdir}"/usr/share/licenses/libevent/LICENSE
}

