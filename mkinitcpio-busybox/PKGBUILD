
pkgname=mkinitcpio-busybox
pkgver=1.33.0
pkgrel=1
pkgdesc="Base initramfs tools"
arch=('x86_64')
url="https://www.busybox.net/"
license=('GPL')
depends=('glibc')
options=('!buildflags')
source=("https://busybox.net/downloads/busybox-${pkgver}.tar.bz2"
        'config')
md5sums=('41fc9cabf1ae61d8403f7ea725c70593'
         '728457a6ce4207d91a07cc16eee99ef9')

build() {
  cd busybox-${pkgver}

  local safeflags="${CARCH/_/-} -mtune=generic -Os -pipe -fno-strict-aliasing"
  sed 's|^\(CONFIG_EXTRA_CFLAGS\)=.*|\1="-march='"$safeflags"'"|' ${srcdir}/config > .config

  make
}

package() {
  install -Dm755 ${srcdir}/busybox-${pkgver}/busybox ${pkgdir}/usr/lib/initcpio/busybox
}

