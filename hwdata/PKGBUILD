
pkgname=hwdata
pkgver=0.387
_pkgver=0.387
pkgrel=1
pkgdesc="Hardware identification and configuration data"
url="https://github.com/vcrhonek/hwdata"
license=('GPL2')
arch=('x86_64')
provides=('hwids')
replaces=('hwids')
conflicts=('hwids')
source=("https://github.com/vcrhonek/hwdata/archive/refs/tags/v${_pkgver}.tar.gz")
md5sums=('bd902dcfd7c33a8a80ef3593aba80250')

build() {
  cd ${pkgname}-${_pkgver}

  ./configure --prefix=/usr \
    --libdir=/usr/lib \
    --datadir=/usr/share
  make
}

package() {
  cd ${pkgname}-${_pkgver}

  make DESTDIR=${pkgdir} install
  #install -Dm644 usb.ids ${pkgdir}/usr/share/hwdata/usb.ids
  #install -Dm644 pci.ids ${pkgdir}/usr/share/hwdata/pci.ids
}

