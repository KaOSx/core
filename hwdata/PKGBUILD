
pkgname=hwdata
pkgver=0.368
pkgrel=1
pkgdesc="Hardware identification and configuration data"
url="https://github.com/vcrhonek/hwdata"
license=('GPL2')
arch=('x86_64')
provides=('hwids')
replaces=('hwids')
conflicts=('hwids')
source=("https://github.com/vcrhonek/hwdata/archive/refs/tags/v${pkgver}.tar.gz")
md5sums=('6c5bb33717e3f017c45bb923d8ca3962')

build() {
  cd ${pkgname}-${pkgver}

  ./configure --prefix=/usr \
    --libdir=/usr/lib \
    --datadir=/usr/share
  make
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
  #install -Dm644 usb.ids ${pkgdir}/usr/share/hwdata/usb.ids
  #install -Dm644 pci.ids ${pkgdir}/usr/share/hwdata/pci.ids
}

