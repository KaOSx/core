
pkgname=libxcrypt
pkgver=4.4.34
pkgrel=1
pkgdesc='Extended crypt library for descrypt, md5crypt, bcrypt, and others'
arch=('x86_64')
url='https://github.com/besser82/libxcrypt/'
license=('GPL')
depends=('glibc')
source=("https://github.com/besser82/libxcrypt/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('bb3f467af21c48046ce662186eb2ddf078ca775c441fdf1c3628448a3833a230')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr \
    --disable-static \
    --enable-hashes=strong,glibc \
    --disable-obsolete-api \
    --disable-failure-tokens
  make
}

check() {
  cd ${pkgname}-${pkgver}

  make check 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
