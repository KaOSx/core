
pkgname=libxcrypt
pkgver=4.4.35
pkgrel=1
pkgdesc='Extended crypt library for descrypt, md5crypt, bcrypt, and others'
arch=('x86_64')
url='https://github.com/besser82/libxcrypt/'
license=('GPL')
depends=('glibc')
source=("https://github.com/besser82/libxcrypt/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.xz")
sha256sums=('a8c935505b55f1df0d17f8bfd59468c7c6709a1d31831b0f8e3e045ab8fd455d')

build() {
  cd ${pkgname}-${pkgver}

  ./configure \
    --prefix=/usr \
    --disable-static \
    --enable-hashes=strong,glibc \
    --disable-obsolete-api \
    --disable-failure-tokens
  make
}

check() {
  cd ${pkgname}-${pkgver}

  make check 
}

package() {
  cd ${pkgname}-${pkgver}

  make DESTDIR=${pkgdir} install
}
